---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-4xl lg:text-5xl xl:text-5xl font-bold lg:tracking-tight xl:tracking-tighter">
      Votre site e-commerce à partir de 2100 DZD par mois
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      ZZENZ simplifie la création de votre boutique et le développement de votre
      entreprise.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://www.zzenz.com"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        Profiter de l’offre
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/services/"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        Nos services
      </Link>
    </div>
  </div>
</main>
